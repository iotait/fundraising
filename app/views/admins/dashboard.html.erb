<% if @admin.school.blank? %>
  <p>Add a school</p>
<% else %>
  <div class="py-9 my-10 snapshot">
    <div class="row">
      <% todays_tallies = @admin.todays_tallies %>
      <div class="col-md-4 col-12 d-flex justify-content-center">
          <div class="snapshot-embellishment align-self-start">$</div>
          <div class="snapshot-figure align-self-stretch ml-2 mr-3"><%= dollars(@admin.school.sum) %></div>
          <div class="snapshot-caption align-self-end">total</div>
      </div>
      <div class="space-between"></div>
      <div class="col-md-4 col-12 d-flex justify-content-center">
          <div class="snapshot-embellishment align-self-start">$</div>
          <div class="snapshot-figure align-self-stretch ml-2 mr-3"><%= dollars(todays_tallies.sum) %></div>
          <div class="snapshot-caption align-self-end">today</div>
      </div>
      <div class="space-between"></div>
      <div class="col-md-4 col-12 d-flex justify-content-center">
          <div class="snapshot-embellishment align-self-start"><i class="far fa-clock"></i></div>
          <div class="snapshot-figure align-self-stretch ml-2 mr-3"><%= todays_tallies.minutes %></div>
          <div class="snapshot-caption align-self-end">today</div>
      </div>
    </div>
  </div>

  <div class="pb-9">
    <div class="row">
      <div class="col-md-4 col-12">
        <div class="dash-card card border-dark mx-4">
          <div class="dash-card-img-top">
            <a href="/admins/<%=@admin.id%>/school"><i class="fas fa-school"></i></a>
          </div>
          <div class="card-body">
            <h5 class="card-title">School</h5>
            <p class="card-text">Look at me, you are the captain of this place</p>
          </div>
        </div>
      </div>
      <div class="space-between"></div>
      <div class="col-md-4 col-12">
        <div class="dash-card card border-dark mx-4">
          <div class="dash-card-img-top">
            <a href="/admins/<%=@admin.id%>/teachers"><i class="fas fa-chalkboard-teacher"></i></a>
          </div>
          <div class="card-body">
            <h5 class="card-title">Teachers</h5>
            <p class="card-text">It's great to be able to pass the buck onto others</p>
          </div>
        </div>
      </div>
      <div class="space-between"></div>
      <div class="col-md-4 col-12">
        <div class="dash-card card border-dark mx-4">
          <div class="dash-card-img-top">
            <a href="/admins/<%=@admin.id%>/students"><i class="fas fa-user-friends"></i></a>
          </div>
          <div class="card-body">
            <h5 class="card-title">Students</h5>
            <p class="card-text">Manage those little rascals running around</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="pb-9">
    <div class="row">
      <div class="col-md-4 col-12">
        <div class="dash-card card border-dark mx-4">
          <div class="dash-card-img-top">
            <a href="/admins/<%=@admin.id%>/reports"><i class="fas fa-chart-line"></i></a>
          </div>
          <div class="card-body">
            <h5 class="card-title">Reports</h5>
            <p class="card-text">Check up on your kiddos to see how they're fairing</p>
          </div>
        </div>
      </div>
      <div class="space-between"></div>
      <div class="col-md-4 col-12">
        <div class="dash-card card border-dark mx-4">
          <div class="dash-card-img-top">
            <a href="/admins/<%=@admin.id%>/promote"><i class="fas fa-share-square"></i></a>
          </div>
          <div class="card-body">
            <h5 class="card-title">Share-a-thon</h5>
            <p class="card-text">Promote your read-a-thon to receive mo' money</p>
          </div>
        </div>
      </div>
      <div class="space-between"></div>
      <div class="col-md-4 col-12">
        <div class="dash-card card border-dark mx-4">
          <div class="dash-card-img-top">
            <a href="/admins/<%=@admin.id%>/end_read_a_thon"><i class="fas fa-hourglass-end"></i></a>
          </div>
          <div class="card-body">
            <h5 class="card-title">End-a-thon</h5>
            <p class="card-text">End your read-a-thon and collect your cash</p>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
