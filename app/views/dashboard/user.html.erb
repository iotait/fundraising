<% provide(:h1, "Dashboard") %>

<h2> Hello, <%= current_user.type %>: <%= current_user.name %></h2>

<a href = "/users/edit">Edit my account</a> <br />

<% if current_user.type == "Admin" %>
  <% school =  School.where(admin_id: current_user.id).first %>
  <% if !school.nil? %>
    <a href = "/schools/<%= school.id %>/edit">Edit my school</a> <br />
  <% end %>
  <a href = "/students/new">Add a student</a>
<% end %>
