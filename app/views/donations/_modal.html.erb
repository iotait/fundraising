<div id="donate_modal" class="modal fade" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Donate</h5>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <form>
          <input type=hidden name="authenticity_token" value="<%= form_authenticity_token %>">
          <div class="mb-7">
            <label class="mr-4" for="donor">Donor:</label>
            <input type="text" id="donor" name="donor" class="mb-4"></input>
          </div>
          <div class="mb-7">
            <label class="mr-2" for="amount">Amount:</label>
            <input type="number" id="amount" name="amount" class="mb-4"></input>
          </div>
          <div class="mb-7">
            <label for="message">Message:</label>
            <input type="text" id="message" name="message" class="mb-4"></input>
          </div>
        </form>
      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" data-dismiss="modal" id="donate_button">Donate</button>
      </div>
    </div>
  </div>
</div>