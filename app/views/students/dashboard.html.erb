<div class="row">
 <div class="col-md-8 order-md-1 col-sm-12 order-2 py-2 bg-primary text-white">
    <div class="row">
      <div class="col-4">
        <% if @student.avatar.attached? %>
          <img src="<%= url_for(@student.avatar) %>" class="rounded float-left" alt="student" width=100% height=auto>
        <% else %>
          <img src="http://www.fancyhands.com/images/default-avatar-250x250.png" class="rounded float-left" alt="Avatar" width=100% height=auto>
        <% end %>
      </div>
      <div class="d-flex align-items-center mx-auto flex-column">
        <div class="p-2" style="font-size: 1.4rem;font-weight: bold;"><%= @student.name %>'s Sum: <%= dollar_format(@student.sum) %></div>
        <div class="p-2"><a href="/donations/new/User/<%= @student.id %>"><button type="button" class="btn btn-light btn-lg">Donate Now</button></a></div>
      </div>
    </div>
  </div> 
  <div class="col-md-4 order-md-2 col-sm-12 order-1 pb-2 bg-secondary text-white">
    <h3>Share:</h3>
    <div class="sharethis-inline-share-buttons"></div>
  </div>
</div>

<div class="d-flex justify-content-center mt-3">
    <div class="p-2"><h3>Share:</h3></div>
    <div class="p-2 sharethis-inline-share-buttons"></div>
</div>

<div class="row">
  <div class="col-md-6 col-sm-12">
    <h3 class="pb-1 pt-3">Donations:</h3>
    <% @student.donations.each do |donation| %>
      <div class="media">
        <img src= <%= "https://dummyimage.com/60x60/000/ffffff&text=" + dollar_format(donation.amount) %> class="align-self-start mr-3" alt="img">
        <div class="media-body">
          <blockquote class="blockquote">
            <p><%= donation.message %></p>
            <footer class="blockquote-footer"><%= donation.donor %></footer>
          </blockquote>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-6 col-sm-12">
    <h3 class="pt-3">Reading Sessions:</h3>
    <a href="/reading_sessions/new/<%= @student.id %>">Add Reading Session</a>
    <ul>
      <% @student.reading_sessions.each do |session| %>
        <li>
          <%= @student.name + " read " + session.time.to_s + " minutes on " + session.created_at.to_s(:long_ordinal) + " - "%>
          <a href="/reading_sessions/<%= session.id %>/edit">Edit</a>
        </li>
      <% end %>
    </ul>
    <div class="p-2 mb-2 bg-info text-white"><%= "Total time reading: " + to_hours_and_mins_s(@student.mins_read) %></div>
  </div>
</div>
