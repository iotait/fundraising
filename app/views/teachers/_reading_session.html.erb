<div id="addReadingSessionModal" class="modal fade" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Reading Session</h5>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <form>
          <label>Time read in minutes:</label>
          <input type="number" id="time" name="time" class="mb-4"></input>
          <p>Select participating students:</p>
          <% teacher.students.each do |student| %>
            <input type="checkbox" name="student_ids[]" id="student_ids_" value="<%= student.id %>">
            <label><%= student.name %></label>
          <% end %>
        </form>
      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" data-dismiss="modal" id="addButton">Add Reading Session</button>
      </div>
    </div>
  </div>
</div>